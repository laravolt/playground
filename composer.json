{
    "name": "laravolt/laravolt",
    "type": "project",
    "description": "The Laravolt Platform.",
    "keywords": [
        "platform",
        "laravolt"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "bensampo/laravel-enum": "^1.26",
        "fideloper/proxy": "^4.0",
        "friendsofphp/php-cs-fixer": "^2.15",
        "laravel/framework": "^6.0",
        "laravel/tinker": "^1.0",
        "laravolt/acl": "^4.2",
        "laravolt/auth": "^4.10",
        "laravolt/avatar": "^3.0",
        "laravolt/epicentrum": "^1.1",
        "laravolt/mailkeeper": "~0.10.0",
        "laravolt/semantic-form": "^2.6",
        "laravolt/suitable": "^3.5",
        "laravolt/thunderclap": "~0.15",
        "laravolt/ui": "~0.14"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.2",
        "facade/ignition": "^1.4",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "phpunit/phpunit": "^8.0",
        "spatie/laravel-web-tinker": "^1.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan laravolt:link-assets"
        ]
    }
}
